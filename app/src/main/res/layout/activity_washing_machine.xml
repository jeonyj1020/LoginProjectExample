<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WashingMachineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCCCCC"
            android:text="예약시작"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Chronometer
            android:id="@+id/chrono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:format="예약에 걸린 시간 - %s"
            android:gravity="center"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rBtnCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날짜 설정 (캘린더)" />

            <RadioButton
                android:id="@+id/rBtnTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시간 설정" />

        </RadioGroup>

        <TextView
            android:id="@+id/picked_d_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="현재 날짜 : 시간"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showWeekNumber="false" />

            <LinearLayout
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_s6e7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 06:00 ~ AM 07:00" />

                    <Button
                        android:id="@+id/btn_s7e8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 07:00 ~ AM 08:00" />

                    <Button
                        android:id="@+id/btn_s8e9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 08:00 ~ AM 09:00" />

                    <Button
                        android:id="@+id/btn_s9e10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 09:00 ~ AM 10:00" />

                    <Button
                        android:id="@+id/btn_s10e11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 10:00 ~ AM 11:00" />

                    <Button
                        android:id="@+id/btn_s11e12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 11:00 ~ AM 12:00" />

                    <Button
                        android:id="@+id/btn_s12e13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 12:00 ~ AM 13:00" />

                    <Button
                        android:id="@+id/btn_s13e14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 13:00 ~ AM 14:00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_s14e15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 14:00 ~ AM 15:00" />

                    <Button
                        android:id="@+id/btn_s15e16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 15:00 ~ AM 16:00" />

                    <Button
                        android:id="@+id/btn_s16e17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 16:00 ~ AM 17:00" />

                    <Button
                        android:id="@+id/btn_s17e18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 17:00 ~ AM 18:00" />

                    <Button
                        android:id="@+id/btn_s18e19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 18:00 ~ AM 19:00" />

                    <Button
                        android:id="@+id/btn_s19e20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 19:00 ~ AM 20:00" />

                    <Button
                        android:id="@+id/btn_s20e21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 20:00 ~ AM 21:00" />

                    <Button
                        android:id="@+id/btn_s21e22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AM 21:00 ~ AM 22:00" />


                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:text="예약완료"
        android:textSize="18dp" />

    <Button
        android:id="@+id/to_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#676767"
        android:gravity="center"
        android:text="TO\nALARM"

        />
</LinearLayout>